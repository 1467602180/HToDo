{
  "private": true,
  "main": "src/main/main.js",
  "scripts": {
    "start": "umi dev",
    "start-electron": "cross-env NODE_ENV=dev electron .",
    "start-build-electron": "cross-env NODE_ENV=build electron .",
    "build": "cross-env UMI_ENV=build umi build",
    "build-electron": "electron-builder -w",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@ant-design/pro-card": "^1.14.0",
    "@ant-design/pro-descriptions": "^1.8.1",
    "@ant-design/pro-form": "^1.28.1",
    "@ant-design/pro-layout": "^6.19.4",
    "@ant-design/pro-list": "^1.9.1",
    "@ant-design/pro-table": "^2.39.1",
    "@umijs/preset-react": "1.x",
    "antd": "^4.16.2",
    "dayjs": "^1.10.5",
    "loadsh": "^0.0.4",
    "localforage": "^1.9.0",
    "umi": "^3.4.25"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/test": "^3.4.25",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.11.7",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "react": "17.x",
    "react-dom": "17.x",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0",
    "electron": "^13.1.2"
  },
  "name": "HToDo",
  "version": "1.0.0",
  "build": {
    "productName": "HToDo",
    "appId": "vip.hfybbs.HToDo",
    "copyright": "HeStudy",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon/HToDo.ico",
      "uninstallerIcon": "icon/HToDo.ico",
      "installerHeaderIcon": "icon/HToDo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HToDo"
    },
    "win": {
      "icon": "icon/HToDo.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "icon/HToDo.icns"
    },
    "files": [
      "dist/*",
      "src/main/main.js"
    ],
    "electronDownload": {
      "mirror": "https://github.com.cnpmjs.org/electron/electron/releases/download/v"
    }
  }
}
